{
	"name": "chess-srs",
	"version": "1.0.5",
	"type": "module",
	"description": "Library to train chess openings with spaced repetition",
	"main": "dist/chessSrs.js",
	"scripts": {
		"compile": "tsc --sourceMap --declaration",
		"watch": "node .build/watch.js",
		"dev": "node dist/main.js",
		"bundle": "esbuild src/chessSrs.ts --bundle --format=esm --outfile=dist/chessSrs.js",
		"test": "jest"
	},
	"files": [
		"/src/*.ts",
		"/dist/*.js",
		"/dist/*.d.ts",
		"/dist/*.js.map"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jacokyle01/chess-srs.git"
	},
	"keywords": [
		"chess",
		"spaced-repetition",
		"chess-openings",
		"typescript"
	],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jacokyle01/chess-srs/issues"
	},
	"homepage": "https://github.com/jacokyle01/chess-srs#readme",
	"dependencies": {
		"chessops": "^0.13.0"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/node": "^20.10.5",
		"esbuild": "^0.19.10",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"typescript": "^5.3.3"
	},
	"jest": {
		"testRegex": ".*\\.test\\.ts$",
		"transform": {
		  "\\.ts$": [
			"ts-jest",
			{
			  "useESM": true
			}
		  ]
		},
		"extensionsToTreatAsEsm": [
		  ".ts"
		],
		"moduleNameMapper": {
		  "^(.*)\\.js$": "$1"
		}
	  }
}
